<definitions targetNamespace="http://example.com/inventory"
             xmlns="http://schemas.xmlsoap.org/wsdl/"
             xmlns:tns="http://example.com/inventory"
             xmlns:xsd="http://www.w3.org/2001/XMLSchema"
             xmlns:soap="http://schemas.xmlsoap.org/wsdl/soap/"
             xmlns:plnk="http://docs.oasis-open.org/wsbpel/2.0/plnktype">

    <message name="InventoryRequestMessage">
        <part name="productId" type="xsd:string"/>
    </message>
    <message name="InventoryResponseMessage">
        <part name="inStock" type="xsd:string"/> 
    </message>

    <portType name="InventoryPT">
        <operation name="checkStock">
            <input message="tns:InventoryRequestMessage"/>
            <output message="tns:InventoryResponseMessage"/>
        </operation>
    </portType>

    <plnk:partnerLinkType name="InventoryPLT">
        <plnk:role name="inventoryService" portType="tns:InventoryPT"/>
    </plnk:partnerLinkType>

    <binding name="InventoryBinding" type="tns:InventoryPT">
        <soap:binding style="rpc" transport="http://schemas.xmlsoap.org/soap/http"/>
        <operation name="checkStock">
            <soap:operation soapAction="http://example.com/inventory/checkStock"/>
            <input><soap:body use="literal" namespace="http://example.com/inventory"/></input>
            <output><soap:body use="literal" namespace="http://example.com/inventory"/></output>
        </operation>
    </binding>

    <service name="InventoryService">
        <port name="InventoryPort" binding="tns:InventoryBinding">
            <soap:address location="http://localhost:8088/mockInventoryService"/>
        </port>
    </service>
</definitions>