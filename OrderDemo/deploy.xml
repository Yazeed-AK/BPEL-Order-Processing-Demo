<?xml version="1.0" encoding="UTF-8"?>
<deploy xmlns="http://www.apache.org/ode/schemas/dd/2007/03" 
        xmlns:pns="http://example.com/orderprocessing" 
        xmlns:inv="http://example.com/inventory" 
        xmlns:pay="http://example.com/payment">
        
    <process name="pns:OrderProcessingService">
        <active>true</active>
        <provide partnerLink="client">
            <service name="pns:OrderService" port="OrderPort"/>
        </provide>
        <invoke partnerLink="inventory">
            <service name="inv:InventoryService" port="InventoryPort"/>
        </invoke>
        <invoke partnerLink="payment">
            <service name="pay:PaymentService" port="PaymentPort"/>
        </invoke>
    </process>
</deploy>